<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.techzone.mapper.UserMapper">
	
	<!-- property是JavaBean的属性。column会和数据库属性字段对应 。将实体与数据库对应-->
	<resultMap type="com.techzone.model.User" id="userResultMap">
        <id property="uid" column="uid"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

	<select id="getUserList"  resultType="list" resultMap="userResultMap">
            select * from user
    </select>

	 <!-- 自动生成id策略  -->
    <insert id="addUser" useGeneratedKeys="true" keyProperty="uid" parameterType="user">
        insert into user(uid, username, password)
        values(#{uid}, #{username}, #{password})
    </insert>
   
	<update id="edit" parameterType="user">
        update user set
        username = #{username},
        password = #{password},
        where uid = #{uid}
    </update>
    
    <delete id="remove" parameterType="user">
        delete from user where uid = #{uid}
    </delete>
	
</mapper>